{% extends 'base.html.twig' %}

{% block title %}Nos biens!
{% endblock %}

{% block body %}
	<main class="container">
		<h1 class="mt-5 mb-3 text-primary">Nos biens</h1>
		<div class="row g-3">
			{% for estate in estates %}
				<div class="card mb-3 border border-0">
					<div class="row g-0">
						<div class="col-md-3">
							<img src="{{ estate.image ? asset('uploads/estate/' ~ estate.image) : asset('build/images/estate.avif')}}" class="card-img-top object-fit-cover rounded-5" alt="">
						</div>
						<div class="col-md-4">
							<div class="card-body">
								<h2 class="card-title fw-bold fs-3">{{ estate.title|u.truncate(40, '...') }}</h2>
								<p class="card-text fs-5">{{ estate.estateCategory.name }} - {{ estate.surface }}m<sup>2</sup>
								</p>
								<p class="card-text fs-5 text-secondary">{{ estate.city }}</p>
								<p class="card-text fw-light">{{ estate.description }}</p>
								<p class="card-text fw-bold fs-4 text-primary">{{ estate.price|number_format(0, '.', ' ') }}â‚¬</p>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

	</main>
{% endblock %}
