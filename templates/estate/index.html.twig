{% extends 'base.html.twig' %}

{% block title %}Nos biens!
{% endblock %}

{% block body %}
	<main class="container">
		<h1>Nos biens</h1>
		<div class="row">
            {% for estate in estates %}
			<div class="col-sm-6 col-md-4 col-lg-3">
				<div class="card">
					<img src="{{ estate.image ? asset('uploads/estate/' ~ estate.image) : asset('build/images/estate.avif')}}" class="card-img-top" alt="...">
					<div class="card-body">
						<h2 class="card-title">{{ estate.title|u.truncate(20, '...') }}</h2>
						<p class="card-text">{{ estate.city }}</p>
						<p class="card-text">{{ estate.price }}€</p>
						<p class="card-text">{{ estate.surface }}</p>
						<a href="#" class="btn btn-primary">Découvrir le bien</a>
					</div>
				</div>
			</div>
            {% endfor %}
		</div>
	</main>
{% endblock %}
