{% extends 'base.html.twig' %}

{% block title %}Estate index{% endblock %}

{% block body %}
    <h1>Estate index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Price</th>
                <th>Surface</th>
                <th>Address</th>
                <th>City</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for estate in estates %}
            <tr>
                <td>{{ estate.id }}</td>
                <td>{{ estate.title }}</td>
                <td>{{ estate.price }}</td>
                <td>{{ estate.surface }}</td>
                <td>{{ estate.address }}</td>
                <td>{{ estate.city }}</td>
                <td>{{ estate.description }}</td>
                <td>{{ estate.image }}</td>
                <td>
                    <a href="{{ path('app_admin_estate_show', {'id': estate.id}) }}">show</a>
                    <a href="{{ path('app_admin_estate_edit', {'id': estate.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_estate_new') }}">Create new</a>
{% endblock %}
