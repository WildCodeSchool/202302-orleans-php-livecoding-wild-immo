{% extends 'base.html.twig' %}

{% block title %}Guide{% endblock %}

{% block body %}
    <h1>Guide</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ guide.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ guide.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ guide.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ guide.image }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ guide.createdAt ? guide.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_guide_index') }}">back to list</a>

    <a href="{{ path('app_admin_guide_edit', {'id': guide.id}) }}">edit</a>

    {{ include('admin_guide/_delete_form.html.twig') }}
{% endblock %}
